<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>API Keys</title>
        <title lang="de-DE">API Keys</title>

        <component name="checkout-plugin-config-section-api">
            <name>checkoutPluginConfigSectionApi</name>
        </component>
    </card>

    <card>
        <title>Payments</title>
        <title lang="de-DE">Zahlungen</title>

        <input-field type="bool">
            <name>enable3dSecure</name>
            <label>3D Secure</label>
            <label lang="de-DE">3D-Sicherheit</label>
            <defaultValue>true</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Registered webhook</title>
        <title lang="de-DE">Registrierter Webhaken</title>

        <component name="checkout-plugin-config-webhook-section">
            <name>checkoutPluginConfigWebhook</name>
        </component>
    </card>

    <card>
        <title>Order Status Customisation</title>
        <title lang="de-DE">Anpassung des Auftragsstatus</title>

        <input-field type="single-select">
            <name>orderStateForPaidPayment</name>
            <label>Order state for paid payment</label>
            <label lang="de-DE">Auftragsstatus für bezahlte Zahlung</label>
            <options>
                <option>
                    <id>checkout_com.skip</id>
                    <name>Skip this status</name>
                    <name lang="de-DE">nichts machen</name>
                </option>
                <option>
                    <id>open</id>
                    <name>Open</name>
                    <name lang="de-DE">Offen</name>
                </option>
                <option>
                    <id>in_progress</id>
                    <name>In progress</name>
                    <name lang="de-DE">In Bearbeitung</name>
                </option>
                <option>
                    <id>completed</id>
                    <name>Completed</name>
                    <name lang="de-DE">Komplett</name>
                </option>
                <option>
                    <id>cancelled</id>
                    <name>Cancelled</name>
                    <name lang="de-DE">Abgebrochen</name>
                </option>
            </options>
        </input-field>

        <input-field type="single-select">
            <name>orderStateForFailedPayment</name>
            <label>Order state for failed payment</label>
            <label lang="de-DE">Auftragsstatus bei fehlgeschlagener Zahlung</label>
            <options>
                <option>
                    <id>checkout_com.skip</id>
                    <name>Skip this status</name>
                    <name lang="de-DE">nichts machen</name>
                </option>
                <option>
                    <id>open</id>
                    <name>Open</name>
                    <name lang="de-DE">Offen</name>
                </option>
                <option>
                    <id>in_progress</id>
                    <name>In progress</name>
                    <name lang="de-DE">In Bearbeitung</name>
                </option>
                <option>
                    <id>completed</id>
                    <name>Completed</name>
                    <name lang="de-DE">Komplett</name>
                </option>
                <option>
                    <id>cancelled</id>
                    <name>Cancelled</name>
                    <name lang="de-DE">Abgebrochen</name>
                </option>
            </options>
        </input-field>

        <input-field type="single-select">
            <name>orderStateForAuthorizedPayment</name>
            <label>Order state for authorized payment</label>
            <label lang="de-DE">Auftragsstatus für autorisierte Zahlungen</label>
            <defaultValue>checkout_com.skip</defaultValue>
            <options>
                <option>
                    <id>checkout_com.skip</id>
                    <name>Skip this status</name>
                    <name lang="de-DE">nichts machen</name>
                </option>
                <option>
                    <id>open</id>
                    <name>Open</name>
                    <name lang="de-DE">Offen</name>
                </option>
                <option>
                    <id>in_progress</id>
                    <name>In progress</name>
                    <name lang="de-DE">In Bearbeitung</name>
                </option>
                <option>
                    <id>completed</id>
                    <name>Completed</name>
                    <name lang="de-DE">Komplett</name>
                </option>
                <option>
                    <id>cancelled</id>
                    <name>Cancelled</name>
                    <name lang="de-DE">Abgebrochen</name>
                </option>
            </options>
        </input-field>

        <input-field type="single-select">
            <name>orderStateForVoidedPayment</name>
            <label>Order state for voided payment</label>
            <label lang="de-DE">Auftragsstatus für entwertete Zahlung</label>
            <defaultValue>checkout_com.skip</defaultValue>
            <options>
                <option>
                    <id>checkout_com.skip</id>
                    <name>Skip this status</name>
                    <name lang="de-DE">nichts machen</name>
                </option>
                <option>
                    <id>open</id>
                    <name>Open</name>
                    <name lang="de-DE">Offen</name>
                </option>
                <option>
                    <id>in_progress</id>
                    <name>In progress</name>
                    <name lang="de-DE">In Bearbeitung</name>
                </option>
                <option>
                    <id>completed</id>
                    <name>Completed</name>
                    <name lang="de-DE">Komplett</name>
                </option>
                <option>
                    <id>cancelled</id>
                    <name>Cancelled</name>
                    <name lang="de-DE">Abgebrochen</name>
                </option>
            </options>
        </input-field>
    </card>
</config>
