<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="CheckoutCom\Shopware6\Controller\ConfigController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\MediaController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Service\MediaService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Controller\ComponentsController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Service\CustomerService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\PaymentMethodService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Controller\MediaController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Service\MediaService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\ApplePay\ApplePayService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
