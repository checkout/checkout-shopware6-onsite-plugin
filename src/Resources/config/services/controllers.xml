<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!--    ADMIN API    -->
        <service id="CheckoutCom\Shopware6\Controller\ConfigController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\MediaController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Service\MediaService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\OrderController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Order\OrderCheckoutService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Facade\PaymentRefundFacade"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\ReturnUrlController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Payment\Controller\PaymentController"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Order\OrderService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\WebhookController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Webhook\WebhookService"/>
            <argument type="service" id="checkout_com.shopware6.logger"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!--    STOREFRONT     -->
        <service id="CheckoutCom\Shopware6\Storefront\Controller\MediaController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Service\ContextService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\MediaService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\ApplePay\ApplePayService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!--     STOREFRONT API   -->
        <service id="CheckoutCom\Shopware6\Storefront\Api\CreditCardController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\CreditCard\CreditCardService"/>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Api\ConfigController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Factory\SettingsFactory"/>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Api\ApplePayController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\ApplePay\ApplePayService"/>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Api\DirectPayController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Facade\DirectPayFacade"/>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Api\KlarnaController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="checkout_com.shopware6.logger"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Order\OrderService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Klarna\KlarnaService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Api\SourceController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\CustomerService"/>
        </service>
    </services>
</container>
