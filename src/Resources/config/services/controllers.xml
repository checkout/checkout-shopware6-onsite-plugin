<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="CheckoutCom\Shopware6\Controller\ConfigController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\MediaController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Service\MediaService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Controller\MediaController" public="true">
            <argument type="service" id="CheckoutCom\Shopware6\Service\MediaService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\ApplePay\ApplePayService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\ReturnUrlController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Payment\Controller\PaymentController"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Order\OrderService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Controller\WebhookController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Webhook\WebhookService"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="CheckoutCom\Shopware6\Storefront\Api\ApplePayController" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\ApplePay\ApplePayService"/>
        </service>
    </services>
</container>
