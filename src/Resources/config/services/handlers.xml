<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="checkout_com.shopware6.handler.payment_handler"
                 class="CheckoutCom\Shopware6\Handler\PaymentHandler"
                 abstract="true"
        >
            <argument type="service" id="checkout_com.shopware6.logger"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\Extractor\OrderExtractor"/>
            <argument type="service" id="CheckoutCom\Shopware6\Service\CheckoutApi\CheckoutTokenService"/>
            <argument type="service" id="CheckoutCom\Shopware6\Facade\PaymentPayFacade"/>
            <argument type="service" id="CheckoutCom\Shopware6\Facade\PaymentFinalizeFacade"/>
        </service>

        <!-- Credit Card PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\CreditCardHandler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
            <tag name="checkout_com.shopware6.payment_handler"/>
        </service>

        <!-- Apple Pay PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\ApplePayHandler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
            <tag name="checkout_com.shopware6.payment_handler"/>
        </service>

        <!-- Google Pay PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\GooglePayHandler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
            <tag name="checkout_com.shopware6.payment_handler"/>
        </service>

        <!-- Giropay PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\GiropayHandler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
            <tag name="checkout_com.shopware6.payment_handler"/>
        </service>

        <!-- Przelewy24 PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\Przelewy24Handler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
            <tag name="checkout_com.shopware6.payment_handler"/>
        </service>

        <!-- Sofort PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\SofortHandler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
            <tag name="checkout_com.shopware6.payment_handler"/>
        </service>

        <!-- PayPal PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\PayPalHandler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
            <tag name="checkout_com.shopware6.payment_handler"/>
        </service>
    </services>
</container>
