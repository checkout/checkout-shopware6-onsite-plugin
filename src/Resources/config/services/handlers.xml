<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="checkout_com.shopware6.handler.payment_handler"
                 class="CheckoutCom\Shopware6\Handler\PaymentHandler"
                 abstract="true"
        >
            <argument type="service" id="checkout_com.shopware6.logger"/>
        </service>

        <!-- Credit Card PaymentHandler -->
        <service id="CheckoutCom\Shopware6\Handler\Method\CreditCardHandler" parent="checkout_com.shopware6.handler.payment_handler">
            <tag name="shopware.payment.method.async"/>
        </service>
    </services>
</container>
