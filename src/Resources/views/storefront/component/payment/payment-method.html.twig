{% sw_extends '@Storefront/storefront/component/payment/payment-method.html.twig' %}

{% set METHOD_TYPE_CREDIT_CARD = staticFuncCall('CheckoutCom\\Shopware6\\Handler\\Method\\CreditCardHandler::getPaymentMethodType') %}
{% set METHOD_TYPE_APPLE_PAY = staticFuncCall('CheckoutCom\\Shopware6\\Handler\\Method\\ApplePayHandler::getPaymentMethodType') %}
{% set METHOD_TYPE_GOOGLE_PAY = staticFuncCall('CheckoutCom\\Shopware6\\Handler\\Method\\GooglePayHandler::getPaymentMethodType') %}

{% block component_payment_method_description %}
    {{ parent() }}

    {% block checkout_com_payment_method %}
        <div id="checkoutComPaymentMethod{{ payment.id }}"
             class="checkout-com-payment-method"
             data-payment-method-id="{{ payment.id }}"
            {% if payment.extensions.checkoutConfig.methodType == METHOD_TYPE_APPLE_PAY %}
                data-apple-pay="true"
            {% elseif payment.extensions.checkoutConfig.methodType == METHOD_TYPE_GOOGLE_PAY %}
                data-google-pay="true"
            {% endif %}
        ></div>
    {% endblock %}

    {% block checkout_com_payment_method_included %}
        {% if payment.extensions.checkoutConfig.methodType == METHOD_TYPE_APPLE_PAY %}
            {% block checkout_com_payment_method_apple_pay_display_included %}
                {% sw_include '@CheckoutCom/storefront/component/payment/component/apple/apple-pay-display.html.twig' %}
            {% endblock %}
        {% elseif payment.extensions.checkoutConfig.methodType == METHOD_TYPE_GOOGLE_PAY %}
            {% block checkout_com_payment_method_google_pay_display_included %}
                {% sw_include '@CheckoutCom/storefront/component/payment/component/google/google-pay-display.html.twig' %}
            {% endblock %}
        {% endif %}
    {% endblock %}

    {% block checkout_com_payment_method_selected_included %}
        {% if (payment.id is same as(selectedPaymentMethodId)) %}
            {% block checkout_com_payment_method_credit_card_condition %}
                {% if payment.extensions.checkoutConfig.methodType == METHOD_TYPE_CREDIT_CARD %}
                    {% block checkout_com_payment_method_credit_card_selected_included %}
                        {% sw_include '@CheckoutCom/storefront/component/payment/component/credit-card-fields.html.twig' %}
                    {% endblock %}
                {% elseif payment.extensions.checkoutConfig.methodType == METHOD_TYPE_APPLE_PAY %}
                    {% block checkout_com_payment_method_apple_pay_confirm_selected_included %}
                        {% sw_include '@CheckoutCom/storefront/component/payment/component/apple/apple-pay-confirm.html.twig' %}
                    {% endblock %}
                {% elseif payment.extensions.checkoutConfig.methodType == METHOD_TYPE_GOOGLE_PAY %}
                    {% block checkout_com_payment_method_google_pay_confirm_selected_included %}
                        {% sw_include '@CheckoutCom/storefront/component/payment/component/google/google-pay-confirm.html.twig' %}
                    {% endblock %}
                {% endif %}
            {% endblock %}
        {% endif %}
    {% endblock %}
{% endblock %}
