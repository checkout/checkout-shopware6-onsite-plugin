{% block sw_media_upload_v2_regular_preview_file %}
    <template v-if="source || preview">
        {% block checkout_com_media_compact_upload_v2_condition %}
            {% block checkout_com_media_compact_upload_v2_condition_private %}
                <sw-icon
                    v-if="(source && source.private) || mediaIsPrivate"
                    class="checkout-com-media-compact-preview-v2__locked-icon"
                    name="default-lock-closed"
                    multicolor
                />
            {% endblock %}

            {% block checkout_com_media_compact_upload_v2_condition_preview_fallback %}
                <sw-media-preview-v2
                    v-else
                    class="sw-media-upload-v2__preview"
                    :source="source || preview"
                />
            {% endblock %}
        {% endblock %}
    </template>
{% endblock %}
