{% block checkout_plugin_config_section_order_state %}
    <div class="checkout-plugin-config-section-order-state">
        {% block checkout_plugin_config_section_order_state_loading %}
            <sw-loader v-if="isLoading"></sw-loader>
        {% endblock %}

        {% block checkout_plugin_config_section_order_state_content %}
            <template v-else>
                {% block  checkout_plugin_config_section_order_state_content_paid_select %}
                    <sw-single-select
                        v-model="config.orderStateForPaidPayment"
                        :options="orderOptions"
                        :label="$t('checkout-payments.config.orderState.orderStateForPaidPaymentLabel')"
                    ></sw-single-select>
                {% endblock %}

                {% block  checkout_plugin_config_section_order_state_content_failed_select %}
                    <sw-single-select
                        v-model="config.orderStateForFailedPayment"
                        :options="orderOptions"
                        :label="$t('checkout-payments.config.orderState.orderStateForFailedPaymentLabel')"
                    ></sw-single-select>
                {% endblock %}

                {% block  checkout_plugin_config_section_order_state_content_authorized_select %}
                    <sw-single-select
                        v-model="config.orderStateForAuthorizedPayment"
                        :options="orderOptions"
                        :label="$t('checkout-payments.config.orderState.orderStateForAuthorizedPaymentLabel')"
                    ></sw-single-select>
                {% endblock %}

                {% block  checkout_plugin_config_section_order_state_content_voided_select %}
                    <sw-single-select
                        v-model="config.orderStateForVoidedPayment"
                        :options="orderOptions"
                        :label="$t('checkout-payments.config.orderState.orderStateForVoidedPaymentLabel')"
                    ></sw-single-select>
                {% endblock %}
            </template>
        {% endblock %}
    </div>
{% endblock %}
