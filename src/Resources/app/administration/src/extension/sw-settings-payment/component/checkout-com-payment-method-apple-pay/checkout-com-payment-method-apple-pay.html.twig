                        :upload-tag="applePayFiles.pemMediaId.tag"
                        @media-upload-finish="uploadFinish('pemMediaId', $event)"
                    />
                {% endblock %}

                {% block checkout_com_payment_method_apple_pay_pem_upload_media %}
                    <checkout-com-media-compact-upload-v2
                        variant="regular"
                        :disabled="!acl.can('payment.editor')"
                        :upload-tag="applePayFiles.pemMediaId.tag"
                        :allow-multi-select="false"
                        :source="applePayFiles.pemMediaId.preview"
                        :file-accept="applePayFiles.pemMediaId.accept"
                        :media-is-private="true"
                        @media-drop="onMediaDropped('pemMediaId', $event)"
                        @media-upload-remove-image="onRemoveMedia('pemMediaId')"
                    />
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
